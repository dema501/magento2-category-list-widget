<?xml version="1.0" encoding="UTF-8"?> 
<widgets xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="urn:magento:module:Magento_Widget:etc/widget.xsd">
    <widget id="emizentech_categorywidget" class="Emizentech\CategoryWidget\Block\Widget\CategoryWidget">
        <label translate="true">Category List Widget</label>
        <description>Store Default 1st level Category List Widget</description>
        <parameters>
            <parameter name="title" xsi:type="text" visible="true" sort_order="2">
                <label translate="true">Title</label>
                <description translate="true">Default widget title</description>
                <value>250</value>
            </parameter>
            <parameter name="image" xsi:type="select" required="true" visible="true" sort_order="10">
                <label translate="true">Image Type</label>
                <options>
                    <option name="default" value="no-image" selected="true">
                        <label translate="true">No Image</label>
                    </option>
                    <option name="image" value="image">
                        <label translate="true">With Image</label>
                    </option>
                </options>
            </parameter>
            <parameter name="viewallurl" xsi:type="text" visible="true" sort_order="20">
                <label translate="true">View all URL</label>
                <description translate="true">Default widget view all url</description>
                <value>250</value>
            </parameter>
            <parameter name="parentcat" xsi:type="text"  visible="true" sort_order="40">
                <label translate="true">Specific Parent Category ID</label>
                <description translate="true">Default Category of Current Store will be used in case of Blank</description>
            </parameter>
        </parameters>
    </widget>
</widgets>
